<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.android.revealtextview.MainActivity">

    <com.example.android.revealtextview.RevealTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/app_name"
        app:cornerRadius="30dp"
        app:drawableRight="@drawable/rotate"
        app:endColorFirst="@color/colorPrimary"
        app:endColorSecond="@color/colorAccent"
        app:startColorFirst="@color/colorAccent"
        app:startColorSecond="@color/colorPrimaryDark" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.android.revealtextview.MainActivity">

    <com.example.android.revealtextview.RevealLinearLayout
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cornerRadius="15dp"
        app:backgroundStart="@color/colorAccent"
        app:endColorSecond="@color/colorPrimary"
        app:startColorSecond="@color/colorAccent"
        app:backgroundEnd="@color/colorPrimary"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name" />
    </com.example.android.revealtextview.RevealLinearLayout>

</LinearLayout>
